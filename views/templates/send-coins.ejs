<% include ../header.ejs %>
<script>
$(document).ready(function() {
  $(".send").on("click", function(e)
  {
      e.preventDefault();
      var customer =   $("#customer").val();
      //alert(customer);
      var data = new FormData();
      data.append('customer', customer);
      data.append('tpc', $("#coins").val());
      $("#loadsend").show();
      $.ajax({
          url : "#",
          type: "POST",
          data : data,
          processData: false,
          contentType: false,
          success:function(data, textStatus, jqXHR){
            alert(data);
          }

        });

      });
 });
</script>

